<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="msp.powerrangers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:manageSpaceActivity=".ui.MainActivity"
        android:hardwareAccelerated="false"
        android:largeHeap="true">
        <activity android:name=".ui.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ActivityDonate"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.FragmentTabs"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityReportCase"
            android:label="@string/reportCaseActivityTitle"
            android:parentActivityName=".ui.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.MainActivity" />
        <activity
            android:name=".ui.ActivityDetailContainer"
            android:label="@string/title_activity_detail_container"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>