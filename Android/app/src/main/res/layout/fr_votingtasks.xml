<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- SearchView and Title are displayed over the rows (which are generated by the RecyclerView)-->
        <TextView
        android:id="@+id/titleVotingTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="11pt"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/titleVotingTasks" />

        <TextView
            android:id="@+id/textEmptyListVT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_below="@+id/titleVotingTasks"
            android:text="@string/emptyListVT"
            android:visibility="gone"/>

        <!-- Recycler View -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewVT"
            android:name="msp.powerrangers.ui.FragmentVotingTask"
            android:layout_below="@+id/textEmptyListVT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="msp.powerrangers.ui.FragmentVotingTasks"
            tools:listitem="@layout/fr_votingtasks_li"
            />
    </RelativeLayout>
</ScrollView>