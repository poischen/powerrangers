<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/fStart_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerInParent="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fStart_ScrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="3">
            <Space
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <!-- UserDB pic -->
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/defaultuser"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />

            <!-- Logout button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text="@string/frStart_logout"
                android:textSize="5dp"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>

        <!-- User name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:id="@+id/textViewUserName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />

        <!-- Row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">

            <!-- Balance -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/numberBalance"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:background="@drawable/startcircle_balance"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textBalance"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/balance" />
            </LinearLayout>

            <!-- open tasks -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/numberOpenTasks"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:background="@drawable/startcircle"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textOpenTasks"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/openTasks_2" />
            </LinearLayout>

            <!-- doanted power -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/numberDonatedPower"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:background="@drawable/startcircle_donated"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textDonatedPower"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/fStart_donatedPower" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <!-- reported cases -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/numberReportedCases"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:background="@drawable/startcircle"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textReportedCases"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/reportesCases" />
            </LinearLayout>

            <!-- confirmed cases -->
            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/numberConfirmedCases"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/startcircle"
                android:gravity="center_vertical|center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textConfirmedCases"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/confirmedCases" />
        </LinearLayout>

            <!-- completed tasks -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/numberCompletedTasks"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:background="@drawable/startcircle"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textCompletedTasks"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/completedTasks" />
            </LinearLayout>
        </LinearLayout>

        <!-- buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/donateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/AppTheme.ButtonDonate"
                android:text="@string/donate" />

            <Button
                android:id="@+id/reportACaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/AppTheme.Button"
                android:text="@string/reportACase" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>