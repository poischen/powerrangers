<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/fStart_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerInParent="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fStart_ScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <!-- UserDB pic -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userimage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:src="@drawable/defaultuser"
                    app:civ_border_color="@color/colorGrey"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <!-- User name -->
                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="TESTNAME" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal">

                        <!-- Balance -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/numberBalance"
                                android:layout_height="40dp"
                                android:layout_width="80dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="30sp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textBalance"
                                android:textColor="@color/colorGrey"
                                android:textSize="12dp"
                                android:letterSpacing=".05"
                                android:layout_marginTop="7dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/balance" />
                        </LinearLayout>

                        <!-- donated power -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/numberDonatedPower"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textDonatedPower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:letterSpacing=".05"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/fStart_donatedPower"
                                android:textColor="@color/colorGrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <!-- buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/donateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#292929"
                    android:text="@string/donate"
                    android:background="@drawable/shape_secondarybutton"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/reportACaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="@string/reportACase"
                    android:background="@drawable/shape_mainbutton"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>


            <!-- Row 1 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp">

                <!-- reported cases -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimaryBackground"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/numberReportedCases"
                        android:layout_height="35dp"
                        android:layout_width="35dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textReportedCases"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10dp"
                        android:layout_marginTop="7dp"
                        android:letterSpacing=".1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/reportesCases" />
                </LinearLayout>

                <!-- open tasks -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimaryBackground"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:id="@+id/usersOpenTasks">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/numberOpenTasks"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:background="@drawable/startcircle_tasks"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textOpenTasks"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10dp"
                        android:layout_marginTop="7dp"
                        android:letterSpacing=".1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/openTasks_2" />
                </LinearLayout>


            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- confirmed cases -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimaryBackground"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/numberConfirmedCases"
                        android:layout_height="35dp"
                        android:layout_width="35dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textConfirmedCases"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10dp"
                        android:layout_marginTop="7dp"
                        android:letterSpacing=".1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/confirmedCases" />
                </LinearLayout>

                <!-- completed tasks -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimaryBackground"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/numberCompletedTasks"
                        android:layout_height="35dp"
                        android:layout_width="35dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textCompletedTasks"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10dp"
                        android:layout_marginTop="7dp"
                        android:letterSpacing=".1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/completedTasks" />
                </LinearLayout>
            </LinearLayout>

            <!-- Logout button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text="@string/frStart_logout"
                android:textSize="5dp"
                android:theme="@style/AppTheme.Button" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>