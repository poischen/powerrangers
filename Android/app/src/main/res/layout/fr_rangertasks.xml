<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <!-- SearchView and Title are displayed over the rows (which are generated by the RecyclerView)-->
        <TextView
            android:id="@+id/titleRangerTasks"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="13pt"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:layout_height="140dp"
            android:background="@color/colorBackgroundOpacity55"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/titleRangerTasks" />

        <!-- Recycler View -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewRT"
            android:name="msp.powerrangers.ui.FragmentRangerTask"
            android:layout_below="@+id/titleRangerTasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            app:layoutManager="LinearLayoutManager"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="msp.powerrangers.ui.FragmentRangerTasks"
            tools:listitem="@layout/fr_rangertasks_li"
            />
        </RelativeLayout>
    </ScrollView>