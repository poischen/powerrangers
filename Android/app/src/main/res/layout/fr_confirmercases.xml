<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- SearchView and Title are displayed over the rows (which are generated by the RecyclerView)-->
        <TextView
            android:id="@+id/titleConfirmerCases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textSize="13pt"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/titleConfirmerCases" />

           <SearchView
               android:id="@+id/searchView"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_below="@+id/titleConfirmerCases"
               android:layout_marginTop="10dp"
               android:gravity="end"
               android:orientation="horizontal"
               android:visibility="visible"
               app:defaultQueryHint="@string/searchView" />



           <!-- Recycler View -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCC"
            android:name="msp.powerrangers.ui.FragmentConfirmerCases"
            android:layout_below="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="msp.powerrangers.ui.FragmentConfirmerCases"
            tools:listitem="@layout/fr_confirmercases_li"
            />
    </RelativeLayout>
</ScrollView>